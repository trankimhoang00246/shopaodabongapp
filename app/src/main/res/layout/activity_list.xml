<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/main"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".DepartmentActivity">

    <RelativeLayout
            android:id="@+id/taskbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1976d2"
            android:padding="13dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp">

        <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1976d2"
                android:contentDescription="Back Button"
                android:src="@drawable/arrowleft"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/backButton"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:text="Nhân viên"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

        <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1976d2"
                android:contentDescription="Back Button"
                android:src="@drawable/search"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <Button
            android:id="@+id/addEmployeeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background"
            android:text="THÊM PHÒNG NHÂN VIÊN MỚI"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="6dp"
            android:gravity="center"
            android:elevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/taskbar" />

    <LinearLayout
            android:id="@+id/firstLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/empl"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/addEmployeeButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã NV: NV001"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="16sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên: Nguyễn Văn B"
                android:textStyle="bold"
                android:textSize="16sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng ban: Hành chính"
                android:textStyle="bold"
                android:textSize="16sp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

            <ImageView
                    android:id="@+id/img11"
                    android:paddingRight="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/writing" />

            <ImageView
                    android:id="@+id/img22"
                    android:paddingLeft="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trash" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/secondLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/empl"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/firstLinearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã NV: NV002"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="16sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên: Nguyễn Văn C"
                android:textStyle="bold"
                android:textSize="16sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng ban: Nhân sự"
                android:textStyle="bold"
                android:textSize="16sp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

            <ImageView
                    android:id="@+id/img33"
                    android:paddingRight="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/writing" />

            <ImageView
                    android:id="@+id/img333"
                    android:paddingLeft="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trash" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/thirdLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/empl"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/secondLinearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã NV: NV003"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="16sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên: Nguyễn Văn D"
                android:textStyle="bold"
                android:textSize="16sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng ban: Nhân sự"
                android:textStyle="bold"
                android:textSize="16sp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

            <ImageView
                    android:id="@+id/img44"
                    android:paddingRight="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/writing" />

            <ImageView
                    android:id="@+id/img55"
                    android:paddingLeft="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trash" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/fourthLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/empl"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/thirdLinearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã NV: NV004"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="16sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên: Nguyễn Văn E"
                android:textStyle="bold"
                android:textSize="16sp" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng ban: Đào tạo"
                android:textStyle="bold"
                android:textSize="16sp" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

            <ImageView
                    android:id="@+id/img1"
                    android:paddingRight="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/writing" />

            <ImageView
                    android:id="@+id/img2"
                    android:paddingLeft="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trash" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
